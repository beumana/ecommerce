<h1>All <%= @brand_name %> Products</h1>

<div class="row">
  <% @products_by_brand.each do |product| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <div style="height:150px;">
            <%= image_tag product.image.url(:thumb) %>
          </div>
          <p>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal_<%= product.id %>">
              Quick Info
            </button>
          </p>
          <p><strong><%= number_to_currency product.price %></strong></p>
          <p><%= product.name %><p>
          <div style="height:150px;">
            <p><%= product.description %></p>
          </div>
          <p>Made by: <%= product.brand %></p>
          <p><%# product.rating.times do %>
            <!-- <span class="glyphicon glyphicon-star yellow"></span> -->
          <%# end %>
          </p>
        </div>
      </div>
    </div>